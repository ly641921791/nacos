<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.alibaba.nacos.plugin.auth.impl.mapper.RoleEntityMapper">

    <select id="getRolesByUserNameAndRoleName"
            resultType="com.alibaba.nacos.plugin.auth.impl.persistence.RoleInfo">
        SELECT role,username FROM roles
        <where>
            <if test="@org.apache.commons.lang.StringUtils@isNotBlank(username)">
                AND username = #{username}
            </if>
            <if test="@org.apache.commons.lang.StringUtils@isNotBlank(role)">
                AND role = #{role}
            </if>
        </where>
    </select>

    <delete id="deleteByRole">
        DELETE FROM roles WHERE role = #{role}
    </delete>

    <delete id="deleteRole">
        DELETE FROM roles WHERE role = #{role} AND username = #{username}
    </delete>

    <select id="findRolesLikeRoleName" resultType="java.lang.String">
        SELECT role FROM roles WHERE role LIKE #{role}
    </select>

    <select id="findRolesLike" resultType="com.alibaba.nacos.plugin.auth.impl.persistence.RoleInfo">
        SELECT role, username FROM roles
        <where>
            <if test="@org.apache.commons.lang.StringUtils@isNotBlank(username)">
                AND username LIKE #{username}
            </if>
            <if test="@org.apache.commons.lang.StringUtils@isNotBlank(role)">
                AND role LIKE #{role}
            </if>
        </where>
    </select>

</mapper>